<!-- views/edit.ejs -->
<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Edit User</title>
  <style>
    /* General Styling */
    body {
      font-family: Arial, sans-serif;
      background-color: #f0f0f0;
      margin: 0;
      padding: 20px;
    }

    .container {
      max-width: 500px;
      margin: 0 auto;
      background-color: #fff;
      padding: 20px;
      border-radius: 8px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    h1 {
      text-align: center;
      margin-bottom: 20px;
    }

    /* Form Styling */
    .user-form {
      display: flex;
      flex-direction: column;
    }

    .form-group {
      margin-bottom: 15px;
    }

    .form-group label {
      display: block;
      margin-bottom: 5px;
      font-weight: bold;
    }

    .form-group input {
      width: 100%;
      padding: 10px;
      border: 1px solid #ccc;
      border-radius: 4px;
    }

    /* Button Styling */
    .btn-submit {
      width: 100%;
      padding: 10px;
      background-color: #007bff;
      color: white;
      border: none;
      border-radius: 4px;
      cursor: pointer;
      font-size: 16px;
      margin-top: 10px;
    }

    .btn-submit:hover {
      background-color: #0056b3;
    }

    /* Back Button */
    .btn-back {
      display: inline-block;
      margin-top: 15px;
      text-align: center;
      width: 100%;
      padding: 10px;
      background-color: #6c757d;
      color: white;
      text-decoration: none;
      border-radius: 4px;
    }

    .btn-back:hover {
      background-color: #5a6268;
    }
  </style>
</head>

<body>
  <div class="container">
    <h1>Edit User</h1>
    <form action="/users/<%= user._id %>?_method=PUT" method="POST" class="user-form">
      <div class="form-group">
        <label for="username">Name:</label>
        <input type="text" name="name" value="<%= user.username %>" required>
      </div>

      <div class="form-group">
        <label for="email">Email:</label>
        <input type="text" name="email" value="<%= user.email %>" required>
      </div>

      <div class="form-group">
        <label for="address">Address:</label>
        <input type="text" name="address" value="<%= user.address %>" required>
      </div>

      <button type="submit" class="btn-submit">Update User</button>
    </form>
    <a href="/" class="btn-back">Back to User List</a>
  </div>
</body>

</html>